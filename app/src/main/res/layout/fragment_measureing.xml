<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.viatom.smartbp.fragment.MeasureingFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:layout_margin="@dimen/measure_horizontal_margin"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/measure_bp_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textAlignment="textEnd"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/measure_horizontal_margin"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:text="@string/bp_unit"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/action_guide_img"
            android:layout_marginTop="@dimen/measure_vertical_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/animation_start_pump"/>

        <TextView
            android:id="@+id/action_guide_text"
            android:layout_marginTop="@dimen/measure_vertical_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_stop_pump"
            android:textSize="24sp"
            android:visibility="visible"/>


    </LinearLayout>
</LinearLayout>
